<h1>Listing songs</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "name", "Name" %></th>
      <th><%= sortable "length", "Length" %></th>
      <th>Description</th>
      <th><%= sortable "artist", "Artist" %></th>
      <th><%= sortable "album", "Album" %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.length %></td>
        <td><%= song.description %></td>
        <td><%= song.artist.name %></td>
        <td><%= link_to(song.album.name, song.album) if song.album.present? %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_artist_song_path(@artist || @album) if @artist || @album %>
