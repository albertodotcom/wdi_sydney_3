<%= form_for(@path) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :length %><br>
    <%= f.number_field :length %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :video %><br>
    <%= f.url_field :video %>
  </div>
  <div class="field">
    <span>Artist: </span> <%= @artist.name %>
    <%= f.hidden_field :artist_id, value: @artist.id %>
  </div>
  <div class="field">
    <%= f.label :genre_ids %><br>
    <%= f.collection_check_boxes :genre_ids, @genres, :id, :name %>
  </div>
  <div class="field">
    <%= f.collection_select(:album_id, Album.all, :id, :name, {:include_blank => 'Select an Album'}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
