<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<p>
  <%= image_tag @album.cover_image %>
</p>

<p>
  <strong>Artist:</strong>
  <%= link_to @album.artist.name, @album.artist %>
</p>

<div>
  <h3>Songs: </h3>
  <ul>
    <% @songs.each do |song| %>
      <li><%= link_to song.name, song %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
<%= link_to 'Insert new song', new_album_song_path(@album) %>
